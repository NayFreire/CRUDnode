<div class="container-fluid">
    <h1>Cadastre de Clientes</h1>
    <div class="row">
        <span class="col-md-4"></span>
        <div class="col-md-4">
            {{#data}}
                <form action="/controllerUpdateClient/{{idColab}}" method="post" name="form1">
                    <div class="form-group" style="margin-bottom: 10px;">
                        <label for="name">Nome Completo</label>
                        <input type="text" class="form-control" id="name" name="name" value="{{nome}}" required>
                    </div>
                    <div class="form-group" style="margin-bottom: 10px;">
                        <label for="city">Cidade</label>
                        <input type="text" class="form-control" id="city" name="city" value="{{cidade}}" required>
                    </div>
                    <div class="form-group" style="margin-bottom: 10px;">
                        <label for="neighborhood">Bairro</label>
                        <input type="text" class="form-control" id="neighborhood" name="neighborhood" value="{{bairro}}" required>
                    </div>
                    <div class="form-group" style="margin-bottom: 10px;">
                        <label for="email">E-mail</label>
                        <input type="email" class="form-control" id="email" value="{{email}}" name="email">
                    </div>
                    <div class="form-group" style="margin-bottom: 10px;">
                        <label for="phone">Telefone</label>
                        <input type="text" class="form-control" id="phone" value="{{telefone}}" name="phone" required>
                    </div>
                    <div class="form-group" style="margin-bottom: 10px;">
                        <label for="cnpj">CNPJ</label>
                        <input type="text" class="form-control" id="cnpj" name="cnpj" value="{{cnpj}}" required>
                    </div>
                    <div class="d-flex align-items-center justify-content-center">
                        <button type="submit" class="btn btn-primary">Cadastrar</button>
                    </div>
                </form>
            {{/data}}
        </div>
        <span class="col-md-4"></span>
    </div>
</div>